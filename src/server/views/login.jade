extends layout

block content
  style.
    body {
      background: linear-gradient(to bottom right, #EEEEEE, #64CCC5); /* Green gradient */
      margin: 0;
      padding: 0;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  .container
    .login-form
      h1.login-title Login
      //- p.lead Say something worthwhile here.
      br
      
      form(role='form', action="/login", method="post", style='max-width: 300px;')
        .form-group
          label(for="username") Username:
          input.form-control(type='text', name="username", id="username", placeholder='Enter Username')
        .form-group
          label(for="password") Password:
          input.form-control(type='password', name="password", id="password", placeholder='Password')
        
        button.btn.btn-primary.btn-block(type='submit') Log In
        a(href='/register', class='btn btn-secondary btn-block mt-2') Don't Have an account? Sign Up Here
